<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/news_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/hobby_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/maple_leaf_mdpi3"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/hobby_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/hobby_image_view"
                tools:text="Programming"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/hobby_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="10 000"
                android:padding="8dp"
                android:textSize="24sp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>