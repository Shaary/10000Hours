<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/session_text_view"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="2019-02-03 00:30:10"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/del_session_button"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/del_session_button"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Del"
        app:layout_constraintEnd_toStartOf="@+id/edit_session_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_session_button"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>